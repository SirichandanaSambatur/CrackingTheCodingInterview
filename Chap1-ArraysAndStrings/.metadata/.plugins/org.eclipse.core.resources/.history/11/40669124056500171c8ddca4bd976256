
public class URLify {

	public void removeSpaces(char[] s, int trueLen){
		int countSpaces=0,idx;
		for(int i=0;i<trueLen;i++){
			if(s[i]==' ')
				countSpaces++;
		}
		idx=trueLen+countSpaces*2;
		for(int i=trueLen-1;i>=0;i--){
			if(s[i]==' '){
				s[idx-1]='0';
				s[idx-2]='2';
				s[idx-3]='%';
				idx=idx-3;
			}
			else{
				s[idx-1]=s[i];
				idx=idx-1;		
			}
		}
		System.out.println("New string is:"+s.toString());
	}
	public static void main(String args[]){
		String s="adfghy";
		char[] chars=s.toCharArray();
		System.out.println("New string is:"+s);
		System.out.println("New string is:"+chars.toString());
		int l=chars.length;
		URLify u=new URLify();
		u.removeSpaces(chars,l);
	}
}
